---
  import type { ProjectEntry } from '../data/projects.ts'
  import GithubIcon24 from '../components/icons/GithubIcon24.astro'

  interface Props {
    project: ProjectEntry
  }
  
  const { project } = Astro.props;
---

<div class="flex flex-row bg-neutral-800 rounded-md shadow p-4">
  <div class="flex items-center justify-center w-32 h-32 mr-4">
    { project.avatarUrl ? <img src={project.avatarUrl} alt={project.alt} /> : <span>no logo</span>}
  </div>
  <div class="flex flex-col flex-1">
    <h1 class="text-xl max-sm:max-w-64 h-16 font-semibold flex flex-row gap-2 items-center">
      <a href={project.githubUrl} target="_blank"><GithubIcon24 /></a>
      {project.name}
    </h1>
    <p class="text-neutral-300">{project.description}</p>
  </div>
</div>
