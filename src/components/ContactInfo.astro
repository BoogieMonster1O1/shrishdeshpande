---
import GithubIcon40 from "./icons/contact/GithubIcon40.astro";
import InstagramIcon40 from "./icons/contact/InstagramIcon40.astro";
import FediverseIcon40 from "./icons/contact/FediverseIcon40.astro";
import CurseforgeIcon40 from "./icons/contact/CurseforgeIcon40.astro";
import DiscordIcon40 from "./icons/contact/DiscordIcon40.astro";
import FuelerIcon40 from "./icons/contact/FuelerIcon40.astro";
import HashnodeIcon40 from "./icons/contact/HashnodeIcon40.astro";
import RedditIcon40 from "./icons/contact/RedditIcon40.astro";
import SpotifyIcon40 from "./icons/contact/SpotifyIcon40.astro";
import WikipediaIcon40 from "./icons/contact/WikipediaIcon40.astro";
import DevToIcon24 from "./icons/DevToIcon24.astro";
